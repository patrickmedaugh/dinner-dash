<br />
<%= form_for [:admin, @item] do |f| %>
<%= f.label :title %><br />
<%= f.text_field :title, value: @item.title  %><br /><br />
<%= f.label :description %><br />
<%= f.text_field :description, value: @item.description %><br /><br />
<%= f.label :price %><br />
<%= f.text_field :price, value: @item.price %><br /><br />
<%= f.label :image %><br />
<%= f.text_field :image, value: @item.image %><br /><br />
<br />
Categories: <%= f.collection_check_boxes(:category_ids, @categories, :id, :name) %><br /><br />
Retired: <%= select("item", "retired", [true, false]) %>
<%= f.submit method: "patch" %><br /><br />
<% end %>
