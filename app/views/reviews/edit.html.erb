<%= form_for(@review) do |f| %>
<%= f.label :review %><br />
<%= f.text_field :title, value: @review.title %><br />
<%= f.text_area :review, value: @review.review %>
<%= f.label :score %>
<%= radio_button_tag(:score, "1") %>
<%= label_tag(:review, "1") %>
<%= radio_button_tag(:score, "2") %>
<%= label_tag(:review, "2") %>
<%= radio_button_tag(:score, "3") %>
<%= label_tag(:review, "3") %>
<%= radio_button_tag(:score, "4") %>
<%= label_tag(:review, "4") %>
<%= radio_button_tag(:score, "5") %>
<%= label_tag(:review, "5") %>
<%= f.hidden_field :user_id, value: current_user.id %>
<%= f.hidden_field :item_id, value: @review.item.id %>
<%= f.submit %>
<%end %>
